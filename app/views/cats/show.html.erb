<table>
  <thead>
    <tr>
      <th colspan="2">Name: <%= @cat.name %></th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td>Color:</td> <td> <%= @cat.color %> </td>
    </tr>
    
    <tr>
      <td>Age:</td> <td> <%= @cat.age %> </td>
    </tr>
    
    <tr>
      <td>Sex:</td> <td> <%= @cat.sex %> </td>
    </tr>
  </tbody>
  
  <tfoot>
    <tr>
      <th colspan="2">About this cat: <%= @cat.description %> </th>
    </tr>
  </tfoot>
</table>
